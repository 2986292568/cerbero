# -*- Mode: Python -*- vi:si:et:sw=4:sts=4:ts=4:syntax=python

class Recipe(custom.GStreamerStatic):
    name = 'gst-plugins-base-static'
    version = '0.10.36'
    licenses = [License.LGPLv2Plus]
    extra_configure_options = "--disable-gst_v4l --disable-gnome_vfs --disable-ivorbis"
    deps = ['glib', 'gstreamer', 'libogg', 'pango', 'libtheora', 'libvisual',
            'libvorbis', 'zlib', 'orc']
    platform_deps = { Platform.LINUX: [ 'cdparanoia' ]} #, Platform.DARWIN: [ 'cdparanoia' ] }
    use_system_libs = True
    plugins_categories = ['core', 'playback', 'encoding', 'codecs', 'vis']
    platform_plugins_categories = ['sys', 'net']

    files_core_devel = [
             'libgstadder',
             'libgstapp',
             'libgstaudioconvert',
             'libgstaudiorate',
             'libgstaudioresample',
             'libgstaudiotestsrc',
             'libgstffmpegcolorspace',
             'libgstgdp',
             'libgstgio',
             'libgstpango',
             'libgsttypefindfunctions',
             'libgstvideorate',
             'libgstvideoscale',
             'libgstvideotestsrc',
             'libgstvolume',
    ]

    files_playback_devel = [
             'libgstdecodebin2',
             'libgstplaybin',
            ]

    files_encoding_devel = [
             'libgstencodebin',
             ]

    files_codecs_devel = [
             'libgstsubparse',
             'libgstogg',
             'libgsttheora',
             'libgstvorbis',
            ]

    files_vis_devel = [
             'libgstlibvisual',
            ]

    platform_files_sys_devel = {
        Platform.LINUX: [
             'libgstalsa',
             'libgstximagesink',
             'libgstxvimagesink',
             'libgstcdparanoia',
            ]
    }

    platform_files_net_devel = {
        Platform.LINUX: [
             'libgsttcp',
            ],
        Platform.DARWIN: [
             'libgsttcp',
            ]
    }
