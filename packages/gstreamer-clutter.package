# -*- Mode: Python -*-


class Package(package.Package):

    name = 'gstreamer-clutter'
    shortdesc = 'GStreamer Clutter support'
    version = '1.0'
    licences = ['LGPL']
    vendor = 'GStreamer Project'
    deps = ['gstreamer-core']

    libraries = [
                 'libcogl',
                 'libcogl-pango',
                 'libclutter-gst',
                 'libjson-glib-1.0'
    ]

    platform_libs = {
        Platform.WINDOWS: [
             'libclutter-win32',
        ],
        Platform.DARWIN: [
             'libclutter-osx',
        ],
        Platform.LINUX: [
             'libclutter-x11',
        ]
    }
