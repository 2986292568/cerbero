class Recipe(recipe.Recipe):
    name = 'gst-plugins-ugly'
    version = '0.10.19'
    config_sh = 'sh autogen.sh'
    configure_options = '--disable-introspection --disable-iec958 --disable-mpegstream --disable-cdio --disable-lame --disable-sidplay --disable-twolame --disable-x264 '
    remotes = {'upstream': 'git://anongit.freedesktop.org/gstreamer/gst-plugins-ugly'}
    deps = ['gstreamer', 'gst-plugins-base', 'a52dec', 'opencore-amr',
            'libdvdread', 'libmpeg2', 'libmad']

    files_codecs = [
             'lib/gstreamer-0.10/libgsta52dec%(sext)s',
             'lib/gstreamer-0.10/libgstamrnb%(sext)s',
             'lib/gstreamer-0.10/libgstamrwbdec%(sext)s',
             'lib/gstreamer-0.10/libgstasf%(sext)s',
             'lib/gstreamer-0.10/libgstdvdlpcmdec%(sext)s',
             'lib/gstreamer-0.10/libgstdvdread%(sext)s',
             'lib/gstreamer-0.10/libgstdvdsub%(sext)s',
             'lib/gstreamer-0.10/libgstmad%(sext)s',
             'lib/gstreamer-0.10/libgstmpeg2dec%(sext)s',
             'lib/gstreamer-0.10/libgstmpegaudioparse%(sext)s',
    ]
