class Recipe(recipe.Recipe):
    name = 'pango'
    version = '1.28.4'
    autoreconf = True
    deps = ['cairo', 'fontconfig', 'freetype']

    def prepare(self):
        if self.config.target_platform == Platform.WINDOWS:
            self.configure_options += '--with-included-modules'
