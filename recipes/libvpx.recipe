from cerbero import recipe


class Recipe(recipe.Recipe):
    name = 'libvpx'
    version = 'v1.0.0'
    configure_tpl = "%(config-sh)s --prefix=%(prefix)s "\
                    "--libdir=%(libdir)s %(options)s"
    configure_options = "--enable-pic --as=yasm "
    add_host_build_target = False


    def prepare (self):
        from cerbero.config import Platform, Architecture
        if self.config.target_arch == Architecture.X86_64:
            arch = 'x86_64'
        else:
            arch = 'x86'

        if self.config.target_platform == Platform.DARWIN:
            platform = 'darwin11'
        if self.config.target_platform == Platform.WINDOWS:
            self.config_sh = 'LD=$CC ./configure'
            if self.config.target_arch == Architecture.X86_64:
                platform = 'win64'
            else:
                platform = 'win32'
        else:
            self.configure_options += '--enable_shared '
            platform = 'linux'

        self.configure_options += '--target=%s-%s-gcc ' % (arch, platform)
