    licenses = [License.LGPLv2Plus]
    config_sh = 'sh ./autogen.sh --noconfigure && ./configure'
    configure_options = "--disable-examples --with-package-origin='http://www.gstreamer.com' --with-package-name='GStreamer Android MediaCodec Plugin (GStreamer SDK)' "
    remotes = {'origin': 'git://git.collabora.co.uk/git/user/slomo/gst-amc.git'}
    commit = 'origin/master'
    deps = ['gstreamer', 'gst-plugins-base' ]

    platform_files_sys = {
        Platform.ANDROID: ['lib/gstreamer-0.10/libgstamc%(mext)s'],
            }
