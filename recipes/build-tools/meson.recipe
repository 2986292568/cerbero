import os
import stat

class Recipe(recipe.Recipe):
    name = 'meson'
    version = '0.45.1'
    licenses = [License.Apachev2]
    btype = BuildType.CUSTOM
    stype = SourceType.TARBALL
    url = 'https://github.com/mesonbuild/meson/releases/download/%(version)s/meson-%(version)s.tar.gz'
    deps = ['ninja']
    patches = ['meson/0001-for_darwin-Also-accept-system-ios-in-cross-files.patch']

    files_bin = ['bin/meson']
    files_python = []

    def install(self):
        shell.call('%s setup.py install --prefix %s' %
                (self.config.python_exe, self.config.prefix),
                self.build_dir)
