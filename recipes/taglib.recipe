class Recipe(recipe.Recipe):
    name = 'taglib'
    version = '1.7'
    configure_options = '-DWITH_MP4=ON -DWITH_ASF=ON'
    btype = BuildType.CMAKE

    def prepare(self):
        self.configure_options += ' -DLIB_SUFFIX=%s' % self.config.lib_suffix
