class Recipe(recipe.Recipe):
    name = 'wavpack'
    version = '4.60.1'
    platform_deps = { Platform.WINDOWS: ['libiconv'] }

    def prepare(self):
        if self.config.target_platform == Platform.WINDOWS:
            self.config_sh = 'export LDFLAGS="$LDFLAGS -liconv"; ./configure'
