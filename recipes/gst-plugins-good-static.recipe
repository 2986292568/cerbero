    def prepare(self):
        if self.config.target_platform == Platform.WINDOWS:
            if self.config.platform == Platform.LINUX:
                # remove taglib dependency, which cannot be crosscompiled
                self.deps.remove('taglib')
            self.configure_options += '--disable-aalib --disable-esd '\
                '--disable-dv '

        self.make_install='make install DESTDIR=%s/gstreamer-static' % self.config.prefix
        self.repo_dir = os.path.join(self.config.local_sources, 'gst-plugins-good')
